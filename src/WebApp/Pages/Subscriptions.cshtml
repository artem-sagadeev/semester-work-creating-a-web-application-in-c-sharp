@page
@using WebApp.Models.Subscription
@using WebApp.Services.Developer
@model WebApp.Pages.SubscriptionsModel
@{
    ViewData["Title"] = "Subscriptions";
}

@inject IDeveloperService _developerService;


<div class="container-xl" style="margin-top: 20px;">
    @if (Model.AllSubscriptions is null || !Model.AllSubscriptions.Any())
    {
        <div class="container" style="margin-top: 40px">
            <h3>There is nothing to show you</h3>
            <p>You do not have any paid subscription...</p>
            <a class="btn btn-main" asp-area="" asp-page="/Creators" style="max-width:220px">Find creators</a>
        </div>
    }
    else
    {
        @foreach (var subscription in @Model.AllSubscriptions)
        {
            <div class="container subscriptions">
                @switch (subscription.Tariff.TypeOfSubscription)
                {
                    case TypeOfSubscription.Project:
                        <a asp-page="ProjectProfile" asp-route-id="@subscription.SubscribedToId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tv" viewBox="0 0 16 16">
                                <path d="M2.5 13.5A.5.5 0 0 1 3 13h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zM13.991 3l.024.001a1.46 1.46 0 0 1 .538.143.757.757 0 0 1 .302.254c.067.1.145.277.145.602v5.991l-.001.024a1.464 1.464 0 0 1-.143.538.758.758 0 0 1-.254.302c-.1.067-.277.145-.602.145H2.009l-.024-.001a1.464 1.464 0 0 1-.538-.143.758.758 0 0 1-.302-.254C1.078 10.502 1 10.325 1 10V4.009l.001-.024a1.46 1.46 0 0 1 .143-.538.758.758 0 0 1 .254-.302C1.498 3.078 1.675 3 2 3h11.991zM14 2H2C0 2 0 4 0 4v6c0 2 2 2 2 2h12c2 0 2-2 2-2V4c0-2-2-2-2-2z"/>
                            </svg> @((await _developerService.GetProject(subscription.SubscribedToId)).Name)
                        </a>
                        break;
                    case TypeOfSubscription.User:
                        <a asp-page="UserProfile" asp-route-id="@subscription.SubscribedToId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                            </svg> @((await _developerService.GetUser(subscription.SubscribedToId)).Name)
                        </a>
                        break;
                    case TypeOfSubscription.Team:
                        <a asp-page="CompanyProfile" asp-route-id="@subscription.SubscribedToId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z"/>
                                <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z"/>
                            </svg> @((await _developerService.GetCompany(subscription.SubscribedToId)).Name)
                        </a>
                        break;
                    default:
                        throw new Exception("Нет нужного типа");
                }
                @if (subscription.IsAutorenewal)
                {
                    <p>Автопродление;</p>
                    <p>Следующее списание: @subscription.EndDate, @subscription.Tariff.PricePerMonth руб/мес; Тип подписки: @subscription.Tariff.PriceType;</p>
                }
                else
                {
                    <p>Оплачено до @subscription.EndDate @subscription.Tariff.PricePerMonth руб/мес; Тип подписки: @subscription.Tariff.PriceType; </p>
                }
            </div>
        }
    }
</div>